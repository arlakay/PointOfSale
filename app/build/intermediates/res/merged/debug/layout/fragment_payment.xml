<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginLeft="70dp"
            android:background="?android:colorBackground"
            android:gravity="center|right">

            <TextView
                android:id="@+id/textViewHistorySync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="TRANSACTION"
                    android:textAllCaps="true"
                    android:textColor="@color/rb_dark_brown"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <RadioGroup
                        android:id="@+id/radioGroupPayment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checkedButton="@+id/radioButtonSale"
                        android:visibility="visible">

                        <RadioButton
                            android:id="@+id/radioButtonVoid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/list_category_hover"
                            android:button="@null"
                            android:gravity="start"
                            android:paddingBottom="11dp"
                            android:paddingLeft="20dp"
                            android:paddingTop="11dp"
                            android:text="Void"
                            android:textAlignment="gravity"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/radioButtonRefund"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/list_category_hover"
                            android:button="@null"
                            android:gravity="start"
                            android:paddingBottom="11dp"
                            android:paddingLeft="20dp"
                            android:paddingTop="11dp"
                            android:text="Refund"
                            android:textAlignment="gravity"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:visibility="gone"/>

                        <RadioButton
                            android:id="@+id/radioButtonSettlement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/list_category_hover"
                            android:button="@null"
                            android:gravity="start"
                            android:paddingBottom="11dp"
                            android:paddingLeft="20dp"
                            android:paddingTop="11dp"
                            android:text="Settlement"
                            android:textAlignment="gravity"
                            android:textSize="20sp"
                            android:textStyle="bold"  />

                    </RadioGroup>


                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:background="@color/rb_primary">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewVoidTransaction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/linearLayoutVoid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.SearchView
                                    android:id="@+id/searchViewHistory"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:queryHint="Search Transaction by ID"
                                    app:queryHint="Search Transaction by ID"
                                    app:iconifiedByDefault="false" />

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp">

                            <ListView
                                android:id="@+id/listViewHistory"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:listSelector="@color/rb_primary"
                                android:visibility="gone"/>

                            <LinearLayout
                                android:id="@+id/linearLayoutHistoryEmpty"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/history_empty"
                                    android:layout_gravity="center"
                                    android:alpha="0.25"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:text="No History"
                                    android:textColor="@android:color/darker_gray"/>

                            </LinearLayout>

                            <ProgressBar
                                style="?android:attr/progressBarStyleLarge"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/progressBarHistory"
                                android:visibility="gone"/>

                        </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewRefundTransaction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/linearLayoutRefundTransaction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_amount_refund"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:textSize="25sp"
                    android:hint="Amount"
                    android:textStyle="bold"
                    android:background="@drawable/button_rounded_darker_gray"
                    android:gravity="center" />

                <Button
                    android:id="@+id/btn_refund"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/button_rounded_pay"
                    android:text="Refund"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewSettlementTransaction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/linearLayoutSettlement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_fpayment_settlement"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:textSize="25sp"
                    android:text="Settlement"
                    android:textStyle="bold"
                    android:background="@drawable/button_rounded_pay"
                    android:gravity="center" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>