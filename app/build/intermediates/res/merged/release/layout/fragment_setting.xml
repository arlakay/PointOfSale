<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginLeft="70dp"
            android:gravity="center|right"
            android:background="@color/white" >

            <TextView
                android:id="@+id/textViewHistorySync"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="17sp"
                android:paddingRight="20dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SETTING"
                    android:textSize="@dimen/text_size_title"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <RadioGroup
                        android:id="@+id/radioGroupSetting"
                        android:layout_width="match_parent"
                        android:checkedButton="@+id/radioButtonSale"
                        android:layout_height="match_parent"
                        android:visibility="visible">
                        <RadioButton
                            android:id="@+id/radioButtonSale"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:paddingLeft="20dp"
                            android:paddingTop="11dp"
                            android:paddingBottom="11dp"
                            android:gravity="start"
                            android:textAlignment="gravity"
                            android:textSize="20sp"
                            android:text="ICMP"
                            android:textStyle="bold"
                            android:background="@drawable/list_category_hover" />
                        <RadioButton
                            android:id="@+id/radioButtonBackupDb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:paddingLeft="20dp"
                            android:paddingTop="11dp"
                            android:paddingBottom="11dp"
                            android:gravity="start"
                            android:textAlignment="gravity"
                            android:textSize="20sp"
                            android:text="Backup DB"
                            android:textStyle="bold"
                            android:background="@drawable/list_category_hover" />
                    </RadioGroup>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:background="@color/background">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/linearLayoutConnectToICMP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textViewSettingConnectToICMP"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:textSize="25sp"
                    android:text="Connect to ICMP"
                    android:textStyle="bold"
                    android:background="@drawable/button_rounded_darker_gray"
                    android:gravity="center"
                    android:visibility="visible"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewBackup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/linearLayoutBackup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_backup_db"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:textSize="25sp"
                    android:text="Backup DB"
                    android:textStyle="bold"
                    android:background="@drawable/button_rounded_darker_gray"
                    android:gravity="center"
                    android:visibility="visible"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>