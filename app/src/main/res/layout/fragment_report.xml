<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginLeft="70dp"
            android:gravity="center|right"
            android:background="?android:colorBackground">

            <TextView
                android:id="@+id/textViewHistorySync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REPORT"
                    android:textSize="@dimen/text_size_title"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp">

                    <RadioGroup
                        android:id="@+id/radioGroupReport"
                        android:layout_width="match_parent"
                        android:checkedButton="@+id/radioButtonSale"
                        android:layout_height="match_parent"
                        android:visibility="visible">
                        <RadioButton
                            android:id="@+id/radioButtonSale"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:paddingLeft="20dp"
                            android:paddingTop="11dp"
                            android:paddingBottom="11dp"
                            android:gravity="start"
                            android:textAlignment="gravity"
                            android:textSize="20sp"
                            android:text="Sales"
                            android:textStyle="bold"
                            android:background="@drawable/list_category_hover"
                            android:visibility="visible"/>
                        <RadioButton
                            android:id="@+id/radioButtonDrawer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:paddingLeft="20dp"
                            android:paddingTop="11dp"
                            android:paddingBottom="11dp"
                            android:gravity="start"
                            android:textAlignment="gravity"
                            android:textSize="20sp"
                            android:text="Drawer"
                            android:textStyle="bold"
                            android:background="@drawable/list_category_hover"
                            android:visibility="visible" />
                        <RadioButton
                            android:id="@+id/radioButtonOther"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:paddingLeft="20dp"
                            android:paddingTop="11dp"
                            android:paddingBottom="11dp"
                            android:gravity="start"
                            android:textAlignment="gravity"
                            android:textSize="20sp"
                            android:text="OTHER"
                            android:textStyle="bold"
                            android:background="@drawable/list_category_hover"
                            android:visibility="gone" />
                    </RadioGroup>


                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:background="?android:colorBackground">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewReportSale"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:visibility="visible">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/linearLayoutHistoryDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/textViewReportSalesDay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:text="Sunday"/>



                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageViewHistoryPrint"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="end"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/icon_02_print"
                            android:visibility="invisible"/>

                        <ImageView
                            android:id="@+id/imageViewHistoryMail"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="end"
                            android:src="@drawable/icon_22_mail"
                            android:layout_alignParentTop="true"
                            android:layout_toStartOf="@+id/imageViewHistoryPrint"
                            android:visibility="invisible" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/linearLayout4"
                            android:layout_weight="0.33"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textViewGrossSales"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hot Sales Item"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/textViewReportSalesGrossSalesTop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200.000"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="25sp"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/textViewReportSalesHotSalesTop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bakso"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="25sp"/>
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/linearLayout5"
                            android:layout_weight="0.33"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textViewTotalTransaction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Transaction"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/textViewReportSalesTotalTransaction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="25sp" />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/linearLayout6"
                            android:layout_weight="0.33"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Average Sale"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/textViewReportSalesAverageSale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200.000"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="25sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/lineHistoryTop"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/black"
                        android:text="Sales Summary"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:id="@+id/linearLayoutHistoryDescriptionItemList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gross Sales"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp"/>
                        
                        <TextView
                            android:id="@+id/textViewReportSalesSummaryGrossSales"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 10,000"
                            android:textSize="15sp"
                            android:gravity="end"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discount"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/textViewReportSalesSummaryDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 10,000"
                            android:textSize="15sp"
                            android:gravity="end"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Net Sales"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/textViewReportSalesSummaryNetSales"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 10,000"
                            android:textSize="15sp"
                            android:gravity="end"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Service"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/textViewReportSalesSummaryService"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 10,000"
                            android:textSize="15sp"
                            android:gravity="end"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tax"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/textViewReportSalesSummaryTax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 10,000"
                            android:textSize="15sp"
                            android:gravity="end"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Collected"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/textViewReportSalesSummaryTotalCollected"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 10,000"
                            android:textSize="15sp"
                            android:gravity="end"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cash"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/textViewReportSalesSummaryCash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 10,000"
                            android:textSize="15sp"
                            android:gravity="end"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Card"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/textViewReportSalesSummaryCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 10,000"
                            android:textSize="15sp"
                            android:gravity="end"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Net Total"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/textViewReportSalesSummaryNetTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 10,000"
                            android:textSize="15sp"
                            android:gravity="end"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hot Sales Item"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/textViewReportSalesSummaryHotSalesItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 10,000"
                            android:textSize="15sp"
                            android:gravity="end"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:id="@+id/linearLayoutReportSalesSelectDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewReportSalesNoTransactionWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:textSize="25sp"
                    android:text="No Transaction in Sunday, 25 November 2015"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/textViewReportSalesSelectDate"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:textSize="25sp"
                    android:text="Select Date"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_calculator_view"
                    android:gravity="center"
                    android:visibility="visible"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewReportSalesCalender"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:src="@drawable/icon_23_calendar"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/imageViewHistoryPrint"
                android:visibility="visible"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayoutReportDrawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:visibility="gone">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.3"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Drawer Description"
                            android:textSize="15sp"/>
                        <EditText
                            android:id="@+id/editTextReportDrawerDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:hint="Enter drawer description"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/buttonReportDrawerEnd"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/charge"
                        android:text="END DRAWER"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_weight="0.7"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ ADD EXPENSES"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_marginRight="5dp"
                        android:layout_toStartOf="@+id/textView3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/textView3" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="15dp">

                    <TextView
                        android:id="@+id/textViewReportDrawerDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MONDAY, 12 NOVEMBER 2016"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="25dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start of Drawer"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/textViewReportDrawerStartDrawer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="11.20 AM"
                            android:textSize="18sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

